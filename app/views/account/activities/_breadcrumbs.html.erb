<% activity ||= @activity %>
<% team ||= @team || activity&.team %>
<%= render 'account/teams/breadcrumbs', team: team %>
<%= render 'account/shared/breadcrumb', label: t('.label'), url: [:account, team, :activities] %>
<% if activity&.persisted? %>
  <%= render 'account/shared/breadcrumb', label: activity.label_string, url: [:account, activity] %>
<% end %>
<%= render 'account/shared/breadcrumbs/actions', only_for: 'activities' %>
