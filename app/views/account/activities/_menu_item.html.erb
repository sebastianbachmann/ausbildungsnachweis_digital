<% if can? :read, Activity.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :activities]),
    label: t('activities.navigation.label'),
  } do |p| %>
    <% p.content_for :icon do %>
      <i class="<%= t('activities.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>
